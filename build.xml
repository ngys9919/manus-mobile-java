<?xml version="1.0" encoding="UTF-8"?>
<project name="CatTodoApp" default="apk" basedir=".">
    <property environment="env"/>
    <property name="sdk.dir" value="${env.ANDROID_HOME}"/>
    <property file="local.properties"/>

    <loadproperties srcFile="project.properties"/>

    <fail unless="sdk.dir" message="sdk.dir is not set. Please set it in local.properties or in your environment."/>

    <import file="${sdk.dir}/tools/ant/build.xml"/>

    <target name="apk" depends="clean, debug"/>
</project>
